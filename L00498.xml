               </listPlace><listPerson><person xml:id="tillich_person_id__1928">
                  <persName>Tillich, Paul</persName>
                  <birth>
                     <date>1886-08-20</date>
                  </birth>
                  <death>
                     <date>1965-10-22</date>
                     <settlement>
