   <text type="letter">
      <body>
         <div type="writingSession">
            <pb n="1"/>
            <opener>
               <dateline>erl.<date when="1926-11-18">18. / XI. 26 </date>
                  <rs ref="#tillich_place_id__126" type="place">Dresden</rs>, d. <date when="1926-11-16">16. 11. 26</date><address>
